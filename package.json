{
  "name": "webpack-demo",
  "version": "1.0.1",
  "description": "",
  "main": "build/main/main.js",
  "private": true,
  "scripts": {
    "test": "karma start --single-run",
    "clean": "rm -rf ./dist ./build",
    "clean:all": "rm -rf ./dist ./build ./node_modules",
    "start": "yarn run clean && yarn run build:webpack && electron .",
    "release": "yarn run clean && yarn run build:webpack && yarn run build:installer",
    "build:webpack": "webpack --display-error-details",
    "build:installer": "node tasks/build.win.js && node tasks/build.linux.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.0.0",
    "copy-webpack-plugin": "^5.0.3",
    "electron": "^4.1.4",
    "electron-builder": "^20.39.0",
    "electron-log": "^3.0.5",
    "electron-updater": "^4.0.6",
    "html-webpack-include-assets-plugin": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "karma": "^4.1.0",
    "karma-cli": "^2.0.0",
    "karma-electron": "^6.0.0",
    "karma-mocha": "^1.3.0",
    "karma-typescript": "^4.0.0",
    "mocha": "^6.1.4",
    "ts-loader": "^5.3.3",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5",
    "vue": "^2.6.10",
    "vue-loader": "^15.7.0",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.2"
  },
  "build": {
    "appId": "webpack-demo",
    "win": {
      "target": "nsis",
      "icon": "misc/icons/windows.ico",
      "files": [
        "!tsconfig.json",
        "!webpack.config.js",
        "!node_modules",
        "build"
      ],
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": "zip",
      "files": [
        "!tsconfig.json",
        "!webpack.config.js",
        "!node_modules",
        "build"
      ],
      "publish": [
        "github"
      ]
    }
  }
}
